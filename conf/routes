# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)

# Post routes

GET         /posts/                controllers.PostController.list
GET         /posts/get/            controllers.PostController.getAll
GET         /posts/get/:id         controllers.PostController.getOne(id: Long)
GET         /posts/:id             controllers.PostController.show(id: Long)
POST        /posts/:id             controllers.PostController.delete(id: Long)
GET         /posts/create/         controllers.PostController.getCreate
POST        /posts/create/         controllers.PostController.create
GET         /posts/edit/:id        controllers.PostController.getEdit(id: Long)
POST        /posts/edit/:id        controllers.PostController.edit(id: Long)
