# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)

# Post routes
GET         /posts/                controllers.Post.list
GET         /posts/:id             controllers.Post.show(id: Long)
POST        /posts/:id             controllers.Post.delete(id: Long)
GET         /posts/create/         controllers.Post.getCreate
POST        /posts/create/         controllers.Post.create
GET         /posts/edit/:id        controllers.Post.getEdit(id: Long)
POST        /posts/edit/:id        controllers.Post.edit(id: Long)
    